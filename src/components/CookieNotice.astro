---

<div id="cookie-notice" class="fixed bottom-0 left-0 right-0 bg-white shadow-lg p-4 z-50 transform translate-y-full transition-transform duration-300">
    <div class="container mx-auto flex flex-col md:flex-row items-center justify-between gap-4">
      <div>
        <p class="text-gray-700">
          Este site utiliza cookies para melhorar sua experiência. Ao continuar navegando, você concorda com a nossa 
          <a href="/privacy-policy" class="text-primary hover:underline">Política de Privacidade</a>.
        </p>
      </div>
      <div class="flex gap-3">
        <button id="accept-cookies" class="bg-primary text-white py-2 px-4 rounded-lg text-sm font-medium hover:bg-opacity-90 transition-colors">
          Aceitar
        </button>
        <button id="decline-cookies" class="bg-gray-200 text-gray-700 py-2 px-4 rounded-lg text-sm font-medium hover:bg-gray-300 transition-colors">
          Recusar
        </button>
      </div>
    </div>
  </div>
  
  <script>
    // Function to check if the user has already made a choice
    function getCookieConsent() {
      return localStorage.getItem('cookieConsent');
    }
    
    // Function to set the user's choice
    function setCookieConsent(value: string) {
      localStorage.setItem('cookieConsent', value);
    }
    
    // Function to show or hide the cookie notice
    function manageCookieNotice() {
      const cookieNotice = document.getElementById('cookie-notice');
      if (!cookieNotice) return;
      
      const consent = getCookieConsent();
      
      if (consent === null) {
        // User hasn't made a choice yet, show the notice
        setTimeout(() => {
          cookieNotice.classList.remove('translate-y-full');
        }, 1000);
      }
    }
    
    // Handle accept button
    const acceptButton = document.getElementById('accept-cookies');
    if (acceptButton) {
      acceptButton.addEventListener('click', () => {
        setCookieConsent('accepted');
        const cookieNotice = document.getElementById('cookie-notice');
        if (cookieNotice) {
          cookieNotice.classList.add('translate-y-full');
        }
      });
    }
    
    // Handle decline button
    const declineButton = document.getElementById('decline-cookies');
    if (declineButton) {
      declineButton.addEventListener('click', () => {
        setCookieConsent('declined');
        const cookieNotice = document.getElementById('cookie-notice');
        if (cookieNotice) {
          cookieNotice.classList.add('translate-y-full');
        }
      });
    }
    
    // Check cookie consent status when the page loads
    document.addEventListener('DOMContentLoaded', manageCookieNotice);
  </script>