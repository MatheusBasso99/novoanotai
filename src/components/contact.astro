---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Contato" description="Entre em contato conosco para reservas, eventos ou dúvidas sobre o Restaurante Sabor & Arte">
  
  <!-- Hero Section -->
  <section class="bg-primary text-white py-16">
    <div class="container mx-auto px-4 text-center">
      <h1 class="font-display font-bold text-4xl md:text-5xl mb-4">Entre em Contato</h1>
      <p class="text-xl max-w-3xl mx-auto">
        Estamos à disposição para atender você. Entre em contato para dúvidas, sugestões ou reservas.
      </p>
    </div>
  </section>

  <!-- Contact Info & Form -->
  <section class="py-16 bg-background">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Contact Info -->
        <div>
          <h2 class="font-display font-bold text-2xl md:text-3xl mb-6">Informações de Contato</h2>
          
          <div class="bg-white rounded-lg shadow-md p-6 mb-8">
            <div class="flex items-start mb-6">
              <div class="bg-primary bg-opacity-10 p-3 rounded-full mr-4">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-primary">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
                </svg>
              </div>
              <div>
                <h3 class="font-bold text-lg mb-1">Endereço</h3>
                <p class="text-gray-700">Rua do Sabor, 123</p>
                <p class="text-gray-700">Centro - São Paulo, SP</p>
                <p class="text-gray-700">CEP: 01000-000</p>
              </div>
            </div>
            
            <div class="flex items-start mb-6">
              <div class="bg-primary bg-opacity-10 p-3 rounded-full mr-4">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-primary">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
                </svg>
              </div>
              <div>
                <h3 class="font-bold text-lg mb-1">Telefone</h3>
                <p class="text-gray-700">(11) 5555-5555</p>
                <p class="text-gray-700">(11) 99999-9999 (WhatsApp)</p>
              </div>
            </div>
            
            <div class="flex items-start mb-6">
              <div class="bg-primary bg-opacity-10 p-3 rounded-full mr-4">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-primary">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
                </svg>
              </div>
              <div>
                <h3 class="font-bold text-lg mb-1">E-mail</h3>
                <p class="text-gray-700">contato@saborarte.com.br</p>
                <p class="text-gray-700">reservas@saborarte.com.br</p>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="bg-primary bg-opacity-10 p-3 rounded-full mr-4">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-primary">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div>
                <h3 class="font-bold text-lg mb-1">Horário de Funcionamento</h3>
                <p class="text-gray-700">Segunda - Sexta: 11h às 23h</p>
                <p class="text-gray-700">Sábado - Domingo: 11h às 00h</p>
                <p class="text-gray-700">Feriados: 12h às 22h</p>
              </div>
            </div>
          </div>
          
          <h2 class="font-display font-bold text-2xl md:text-3xl mb-6">Nos Siga nas Redes Sociais</h2>
          
          <div class="flex gap-4">
            <a href="#" class="bg-[#3b5998] text-white p-3 rounded-full hover:opacity-90 transition-opacity">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
                <path d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z"/>
              </svg>
            </a>
            <a href="#" class="bg-[#E1306C] text-white p-3 rounded-full hover:opacity-90 transition-opacity">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
              </svg>
            </a>
            <a href="#" class="bg-[#1DA1F2] text-white p-3 rounded-full hover:opacity-90 transition-opacity">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/>
              </svg>
            </a>
            <a href="#" class="bg-[#FF0000] text-white p-3 rounded-full hover:opacity-90 transition-opacity">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
                <path d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z"/>
              </svg>
            </a>
          </div>
        </div>
        
        <!-- Contact Form -->
        <div>
          <h2 class="font-display font-bold text-2xl md:text-3xl mb-6">Envie sua Mensagem</h2>
          
          <form class="bg-white rounded-lg shadow-md p-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
              <div>
                <label for="name" class="block text-gray-700 font-medium mb-2">Nome</label>
                <input 
                  type="text" 
                  id="name" 
                  name="name" 
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                  placeholder="Seu nome"
                  required
                />
              </div>
              <div>
                <label for="email" class="block text-gray-700 font-medium mb-2">E-mail</label>
                <input 
                  type="email" 
                  id="email" 
                  name="email" 
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                  placeholder="seu.email@exemplo.com"
                  required
                />
              </div>
            </div>
            
            <div class="mb-4">
              <label for="phone" class="block text-gray-700 font-medium mb-2">Telefone</label>
              <input 
                type="tel" 
                id="phone" 
                name="phone" 
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                placeholder="(00) 00000-0000"
              />
            </div>
            
            <div class="mb-4">
              <label for="subject" class="block text-gray-700 font-medium mb-2">Assunto</label>
              <select 
                id="subject" 
                name="subject" 
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                required
              >
                <option value="" disabled selected>Selecione o assunto</option>
                <option value="reservation">Reserva</option>
                <option value="event">Eventos</option>
                <option value="feedback">Feedback</option>
                <option value="other">Outro</option>
              </select>
            </div>
            
            <div class="mb-4">
              <label for="message" class="block text-gray-700 font-medium mb-2">Mensagem</label>
              <textarea 
                id="message" 
                name="message" 
                rows="5" 
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                placeholder="Sua mensagem"
                required
              ></textarea>
            </div>
            
            <button 
              type="submit" 
              class="bg-primary text-white font-bold py-3 px-6 rounded-lg hover:bg-opacity-90 transition-colors"
            >
              Enviar Mensagem
            </button>
          </form>
        </div>
      </div>
    </div>
  </section>

  <!-- Map Section -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <h2 class="font-display font-bold text-2xl md:text-3xl mb-8 text-center">Como Chegar</h2>
      
      <div class="bg-gray-200 rounded-lg overflow-hidden h-96 shadow-md">
        <!-- Replace with actual map embed -->
        <div class="w-full h-full flex items-center justify-center bg-gray-300">
          <p class="text-gray-600 text-center p-4">
            Mapa será exibido aqui. <br>
            Para um mapa real, insira o iframe do Google Maps ou outra plataforma de mapas.
          </p>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>