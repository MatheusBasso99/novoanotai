---
interface Props {
  title: string;
  description: string;
  buttonText: string;
  buttonLink: string;
  image: string;
  position?: 'left' | 'right';
}

const { 
  title, 
  description, 
  buttonText, 
  buttonLink, 
  image,
  position = 'right' 
} = Astro.props;
---

<div class="bg-accent bg-opacity-20 rounded-lg overflow-hidden shadow-md my-8">
  <div class={`grid grid-cols-1 md:grid-cols-2 gap-6 ${position === 'left' ? 'md:flex-row-reverse' : ''}`}>
    <div class="p-8 flex flex-col justify-center">
      <h3 class="font-display font-bold text-2xl md:text-3xl mb-4 text-dark">{title}</h3>
      <p class="text-gray-700 mb-6">{description}</p>
      <div>
        <a 
          href={buttonLink} 
          class="inline-block bg-primary text-white font-bold py-2 px-6 rounded-lg hover:bg-opacity-90 transition-colors"
        >
          {buttonText}
        </a>
      </div>
    </div>
    <div class={`h-64 md:h-auto ${position === 'left' ? 'md:order-first' : ''}`}>
      <img 
        src={image} 
        alt={title} 
        class="w-full h-full object-cover"
      />
    </div>
  </div>
</div>